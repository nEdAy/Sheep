<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/global_click_selector">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dp"
                android:layout_marginTop="8.0dp"
                android:layout_marginRight="15.0dp"
                android:layout_marginBottom="8.0dp"
                android:layout_toStartOf="@+id/tv_creditsHistory_change"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tv_creditsHistory_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/global_small_text_size"
                    tools:text="稳健型签到" />

            <TextView
                    android:id="@+id/tv_creditsHistory_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dp"
                    android:text="@string/tx_time_def"
                    android:textColor="@color/labelColor"
                    android:textSize="@dimen/global_small_text_size" />

        </LinearLayout>

        <TextView
                android:id="@+id/tv_creditsHistory_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15.0dp"
                tools:text="@string/tx_number_def" />

    </RelativeLayout>

    <View
            android:id="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/divide_line_height"
            android:background="@color/lineColor" />
</LinearLayout>
